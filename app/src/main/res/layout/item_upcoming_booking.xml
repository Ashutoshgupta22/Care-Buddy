<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/cv_upcoming_bookings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    style="@style/Widget.Material3.CardView.Outlined"
    app:layout_constraintTop_toBottomOf="@id/text_upcoming_bookings"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tv_upcoming_nurse_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nurse Name"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/iv_upcoming_nurse_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_upcoming_nurse_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baby care"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_upcoming_nurse_name"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tv_upcoming_nurse_services"
            android:textSize="16sp"
            android:text="Appointment:" />

        <TextView
            android:id="@+id/tv_appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text_appointment"
            android:layout_marginStart="16dp"
            android:layout_below="@id/tv_upcoming_nurse_services"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:text="12th July, 2023" />

        <TextView
            android:id="@+id/tv_appointment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/text_appointment"
            android:layout_below="@id/tv_appointment_date"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:text="4 - 5 PM" />


    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>